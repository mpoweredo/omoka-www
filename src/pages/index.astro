---
import MainLayout from '~layouts/MainLayout.astro';
import Hero from '~components/sections/Hero.astro';
import WhyUs from '~components/sections/WhyUs.astro';
import Features, {
  type FeaturesProps,
} from '~components/sections/Features/Features.astro';
import Testimonials from '~components/sections/Testimonials.astro';
import Problem from '~components/sections/Problem.astro';
import Pricing from '~components/sections/Pricing.astro';
import Faq from '~components/sections/Faq.astro';
import Cta from '~components/sections/Cta.astro';
import ContactInfo from '~components/sections/ContactInfo.astro';
import heroVideo from '~assets/video/hero-video.mp4';
import ExpandableStepper from '~components/sections/Features/components/ExpandableStepper.astro';
import BenefitItems from '~components/sections/Features/components/BenefitItems.astro';
import FeatureDescriptionItems from '~components/sections/Features/components/FeatureDescriptionItems.astro';
import IntegrationsInfoBox from '~components/sections/Features/components/IntegrationsInfoBox.astro';

// ICONS
import Stack from 'phosphor-astro/StackDuotone.astro';
import Clipboard from 'phosphor-astro/ClipboardDuotone.astro';
import Buildings from 'phosphor-astro/BuildingsDuotone.astro';
import RocketLaunch from 'phosphor-astro/RocketLaunchDuotone.astro';
import FeatureItemsGrid from '~components/sections/Features/components/FeatureItemsGrid.astro';
import TreeView from 'phosphor-astro/TreeViewDuotone.astro';
import FadersHorizontal from 'phosphor-astro/FadersHorizontalDuotone.astro';
import ArrowsOutLineVertical from 'phosphor-astro/ArrowsOutLineVerticalDuotone.astro';
import Hourglass from 'phosphor-astro/HourglassDuotone.astro';
import ArrowsCounterClockwise from 'phosphor-astro/ArrowsCounterClockwiseDuotone.astro';
import ListBullets from 'phosphor-astro/ListBulletsDuotone.astro';
import Sparkle from 'phosphor-astro/SparkleDuotone.astro';
import Smiley from 'phosphor-astro/SmileyDuotone.astro';
import AsanaIcon from '~assets/icons/asana-icon.svg';
import JiraIcon from '~assets/icons/jira-icon.svg';
import ExcelIcon from '~assets/icons/google-spreadsheet-icon.svg';
import UsersThree from 'phosphor-astro/UsersThreeDuotone.astro';

// IMAGES
import AiGenerationFeature from '~assets/features/ai-generation-feature.png';
import StructureImage from '~assets/features/structure-feature.png';
import AiAssistantFeature from '~assets/features/ai-assistant-feature.png';
import ProposalsFeature from '~assets/features/proposals-feature.png';
import IntegrationsFeature from '~assets/features/integrations-feature.png';

const whyUsCardsData = [
  {
    icon: RocketLaunch,
    title: 'Win more deals with instant estimates with AI',
    description:
      'Reply the same day. Turn client specs into a clear scope with tasks, roles, and time ranges in minutes. Faster proposals boost conversion and shorten the sales cycle using an AI estimate tool for software project estimation.',
  },
  {
    icon: Stack,
    title: 'Standardize the estimation workflow across the company',
    description:
      'Replace spreadsheets with a consistent cost estimation tool. Shared workspaces, reusable templates, role based tasks, and min to max hours deliver repeatable accuracy in every software project estimate.',
  },
  {
    icon: Clipboard,
    title: 'Move from estimation to proposal in one place',
    description:
      'Use AI to analyze inputs and shape the scope of an IT project, then export tasks to Jira, Asana, or Excel and generate branded PDFs with auto totals. Proposal development software built around project estimate software keeps handoffs smooth.',
  },
  {
    icon: Buildings,
    title: 'Built for software agencies',
    description:
      'Dedicated project estimate software accelerates sign-off with transparent scopes from modules to tasks and clear acceptance criteria. Hours summarized by project, module, and role bring budget clarity to software project estimation.',
  },
];

const features = {
  title: {
    text: 'Comprehensive solutions \nfor software project estimation',
    highlights: [{ text: 'project estimation', variant: 3 }],
  },
  items: [
    {
      title: 'Clean & universal structure for every IT project',
      description:
        'Build transparent scopes your clients understand, from high-level modules to granular tasks. Drag-and-drop reordering keeps project estimate software flexible during reviews.\n\nEstimate realistic ranges per task and summarize hours by project, module, and role. Create consistent software project estimates with artificial intelligence cost estimation support.',
      image: StructureImage,
      variant: 'grayish',
      isWithInnerImage: true,
      slotContent: {
        Component: FeatureItemsGrid,
        props: {
          items: [
            {
              icon: TreeView,
              title: 'Group & task structure',
            },
            {
              icon: FadersHorizontal,
              title: 'Use min-max range',
            },
            {
              icon: ArrowsOutLineVertical,
              title: 'Drag and drop',
            },
            {
              icon: Hourglass,
              title: 'Estimate in MD & hours',
            },
          ],
        },
      },
    },
    {
      title: 'Instant estimates \nwith AI',
      description:
        'From nothing to a complete draft in seconds - a solid base you can refine without manual work in your IT project estimation tool.',
      image: AiGenerationFeature,
      variant: 'primary',
      isWithInnerImage: true,
      isReversed: true,
      slotContent: {
        Component: ExpandableStepper,
        props: {
          items: [
            {
              title: 'Upload documents',
              description:
                'Add your RFP, SRS, feature lists, or client notes. AI analyzes the content and extracts the details needed for your estimate.',
            },
            {
              title: 'AI Analysis',
              description:
                'The AI estimating engine detects features, modules, roles, and dependencies, then proposes task breakdowns with min-max hours and risk notes - a ready-to-edit estimation template for software development.',
            },
            {
              title: 'Review & Adjust',
              description:
                'Accept, merge, or edit suggestions. Calibrate ranges, swap roles, and apply rates. The cost estimation tool rolls up hours and cost automatically, producing a reliable baseline for the proposal.',
            },
          ],
        },
      },
    },
    {
      title: 'AI Agent \nfor scope edits',
      description:
        'Adjust features, time ranges, and structure in natural language - no manual rework. The agent keeps your software project estimation current as requirements evolve.',
      image: AiAssistantFeature,
      variant: 'grayish',
      isWithInnerImage: true,
      slotContent: {
        Component: BenefitItems,
        props: {
          items: [
            {
              icon: ArrowsCounterClockwise,
              title: 'Tweak',
              description:
                'Quickly tweak your estimates: add tasks, adjust modules, or recalculate time and cost in seconds.',
            },
            {
              icon: ListBullets,
              title: 'Plan',
              description:
                'From a brief or RFP, it suggests scope, roles, and hours, creating an estimation template for software development.',
            },
            {
              icon: Sparkle,
              title: 'Generate texts',
              description:
                'Produce clear project summaries, SoWs, or detailed client briefs from your estimate.',
            },
            {
              icon: Smiley,
              title: 'Easy to use',
              description:
                'No technical skills needed. Anyone on the team can create and adjust, making onboarding and usage simple and fast',
            },
          ],
        },
      },
    },
    {
      title: 'Client-ready proposals',
      description:
        'Turn estimates into branded PDFs with auto-calculated totals and documented assumptions. Streamline handoff with integrated proposal development software built around estimation.',
      image: ProposalsFeature,
      variant: 'primary',
      isReversed: true,
      slotContent: {
        Component: FeatureDescriptionItems,
        props: {
          items: [
            {
              title: 'Company info ready',
              description:
                'Your company name, branding, logo, and key details are prefilled automatically. Proposals look consistent and professional without extra formatting.',
            },
            {
              title: 'Automatic cost calculation',
              description:
                'Time ranges and costs are filled in instantly from your estimate. No copying numbers by hand - totals, assumptions, and taxes are ready the moment you open the proposal in our proposals software.',
            },
          ],
        },
      },
    },
    {
      title: 'Exports to \nJira, Asana & Excel',
      description:
        'Push selected tasks to delivery tools and share spreadsheets in work or presentation formats. Maintain momentum from estimate to execution without copy-paste.',
      image: IntegrationsFeature,
      variant: 'grayish',
      isWithInnerImage: true,
      slotContent: {
        Component: IntegrationsInfoBox,
        props: {
          items: [
            {
              icon: AsanaIcon,
            },
            {
              icon: JiraIcon,
            },
            {
              icon: ExcelIcon,
            },
          ],
        },
      },
    },
  ],
} as FeaturesProps;

const problemCardsData = [
  {
    icon: Hourglass,
    title: 'The estimation process is very slow',
    description:
      'Most teams need ~4 days for a software project estimation. Use AI estimating in your project estimate software to deliver the proposal to your client the same-day.',
  },
  {
    icon: UsersThree,
    title: 'Estimating is a costly, resource-heavy process',
    description:
      'Manual scoping ties up PMs and engineers. A software project estimator with reusable templates and a cost estimation tool cuts effort and spend.',
  },
  {
    icon: Stack,
    title: 'Disorganized estimates \nand proposals',
    description:
      'Scattered docs and spreadsheets cause errors and rework. An IT project estimation tool centralizes modules, tasks, and rollups, while proposals software exports branded PDFs and pushes tasks to Jira or Asana.',
  },
];

const faqData = [
  {
    question:
      'How accurate are instant estimates with AI for a software project estimate?',
    answer:
      'They provide a strong first draft grounded in your inputs. Role-based ranges, assumptions, risk buffers, and confidence levels make the estimate consistent and defensible; your team fine-tunes details as needed.',
  },
  {
    question:
      'Is devtimate project estimate software or a full project management tool?',
    answer:
      'devtimate is project estimate software. Build the estimate here, then export to your PM tools like Jira or Asana for delivery.',
  },
  {
    question:
      "We already use spreadsheets. What's the real gain in switching to devtimate?",
    answer:
      'Consistency, speed, and traceability - reusable templates, role breakdowns, versioning, assumptions, approvals, exports, and client-ready proposals - all in one place.',
  },
  {
    question:
      'Does devtimate support fixed-price vs time-and-materials software project estimation?',
    answer:
      'Yes. Use min–max ranges and rate cards for T&M, or fix totals and expose assumptions for fixed-price.',
  },
  {
    question:
      'Can we generate branded, client-ready proposals directly from the estimate?',
    answer:
      'Yes. Produce branded PDFs with auto-calculated totals and documented assumptions from the estimate.',
  },
  {
    question:
      'Can non-technical sales reps create a solid software project estimation without engineering help?',
    answer:
      'Yes. The AI estimating engine understands natural language, applies templates and rate cards, and produces a clear scope that PMs can quickly review.',
  },
];
