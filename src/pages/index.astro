<MainLayout
  title="devtimate | Software project estimation tool with AI"
  description="Generate accurate software project estimation with AI. Drag-and-drop modules, min–max hours, export to Jira or Asana. 14-day free trial."
>
  <Hero
    title={{
      text: 'Software project \nestimation tool with AI',
      highlights: [{ text: 'estimation tool', variant: 1 }],
    }}
    description={' Software project estimation in minutes with AI project estimator\nsoftware that standardizes your estimation workflow from brief to proposal.'}
    heroVideo={heroVideo}
  />
  <WhyUs
    title={{
      text: 'Why choose devtimate for software \nproject estimation?',
      highlights: [{ text: 'project estimation', variant: 2 }],
    }}
    cardsData={whyUsCardsData}
  />
  <Features {...features} />
  <Testimonials />
  <Problem
    items={problemCardsData}
    title={{
      text: 'Which software project estimation \nproblems are you facing?',
      highlights: [
        {
          text: 'problems are you facing?',
          variant: 5,
          scaleX: 0.6,
          scaleY: 0.6,
        },
      ],
    }}
  />
  <Pricing />
  <Faq
    title={{
      text: 'FAQ \nfor devtimate tool',
      highlights: [{ text: 'devtimate', variant: 6 }],
    }}
    items={faqData}
  />
  <ContactInfo />
  <Cta
    title="Start free trial now!"
    description="Start software project estimation with AI estimating today.\n14-day free trial, no credit card."
  />
</MainLayout>
