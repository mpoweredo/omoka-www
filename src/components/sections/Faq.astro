---
import Typography from '~components/ui/Typography.astro';
import highlight from '~assets/highlights/highlight-six.svg';
import checkbox from '~assets/doodles/checkbox.svg';
import ChevronDown from 'phosphor-astro/CaretDown.astro';
import { Image } from 'astro:assets';
import { SECTIONS } from '~consts/sections';
import HighlightedText, {
  type HighlightedTextProps,
} from '~components/ui/HighlightedText.astro';

const backgroundUrl = `url(${highlight.src})`;

interface Props {
  title: HighlightedTextProps;
  items: {
    question: string;
    answer: string;
  }[];
}

const { items, title } = Astro.props;
---

<section id={SECTIONS.FAQ} class="container">
  <div class="title">
    <Image class="checkboxDoodle" src={checkbox} alt="checkbox doodle" />

    <Typography align="center" tag="h2" styling="headingL">
      <HighlightedText {...title} />
    </Typography>
  </div>

  <div class="questions">
    {
      items.map((faq, index) => (
        <div
          class="question"
          data-faq-item
          data-open={index === 0 ? 'true' : 'false'}
        >
          <button class="questionHeader" data-faq-button>
            <Typography color="gray1200" tag="h3" styling="bodyL">
              {faq.question}
            </Typography>

            <ChevronDown
              class="chevronDown"
              width={'2.4rem'}
              height={'2.4rem'}
              fill="var(--gray-1300)"
            />
          </button>

          <div class="answerWrapper">
            <div class="answerContent">
              <Typography tag="p" styling="paragraphM" color="gray1000">
                {faq.answer}
              </Typography>
            </div>
          </div>
        </div>
      ))
    }
  </div>
</section>

<script>
  // Initialize FAQ toggle functionality
  const initFaq = () => {
    const faqItems = document.querySelectorAll('[data-faq-item]');

    faqItems.forEach((item) => {
      item.addEventListener('click', () => {
        const isOpen = item.getAttribute('data-open') === 'true';
        item.setAttribute('data-open', isOpen ? 'false' : 'true');
      });
    });
  };

  // Run on initial load
  initFaq();

  // Re-run after Astro page transitions (if using View Transitions)
  document.addEventListener('astro:page-load', initFaq);
</script>

<style define:vars={{ 'background-url': backgroundUrl }}>
  .container {
    display: flex;
    flex-direction: column;
    align-items: center;

    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    margin-top: var(--section-gap);
    padding: var(--s-64) var(--s-16);
  }

  .title {
    position: relative;
    max-width: 530px;
    margin-bottom: 140px;
  }

  .checkboxDoodle {
    position: absolute;
    top: -50%;
    right: 5rem;
    display: none;

    @media (width >= 650px) {
      display: block;
    }
  }

  .highlightText {
    position: relative;
    display: inline-block;
  }

  .highlightTextInner {
    position: relative;
    z-index: 10;
    display: inline-block;
  }

  .highlight {
    position: absolute;
    z-index: 1;
    bottom: 0;
    left: 0;
    transform: translateY(20%);

    display: block;

    width: 100%;
    height: 100%;

    background-image: var(--background-url);
    background-repeat: no-repeat;
    background-size: contain;
  }

  .questions {
    display: flex;
    flex-direction: column;
    gap: var(--s-12);
    width: 100%;
  }

  .questionHeader {
    display: flex;
    gap: var(--s-12);
    align-items: flex-start;
    justify-content: space-between;

    width: 100%;
    padding: 0;
    border: none;

    text-align: left;

    background: none;
  }

  .chevronDown {
    transform: rotate(180deg);
    flex-shrink: 0;
    transition: transform 0.3s ease;
  }

  [data-open='true'] .chevronDown {
    transform: rotate(0deg);
  }

  .question {
    cursor: pointer;

    display: flex;
    flex-direction: column;

    padding: var(--s-20);
    border: 1px solid var(--gray-300);
    border-radius: var(--radius-12);

    background-color: var(--gray-50);

    transition: opacity 0.2s ease;
  }

  .question:hover {
    opacity: 0.9;
  }

  /* Answer wrapper with smooth height transition */
  .answerWrapper {
    overflow: hidden;
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows 0.3s ease;
  }

  [data-open='true'] .answerWrapper {
    grid-template-rows: 1fr;
  }

  .answerContent {
    min-height: 0;
    padding-top: 0;
    transition: padding-top 0.3s ease;
  }

  [data-open='true'] .answerContent {
    padding-top: var(--s-16);
  }
</style>
