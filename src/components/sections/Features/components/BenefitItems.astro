---
import type { AstroComponentFactory } from 'astro/runtime/server/index.js';
import Typography from '~components/ui/Typography.astro';

interface Props {
  items: {
    icon: AstroComponentFactory;
    title: string;
    description: string;
  }[];
}

export interface BenefitItemsProps extends Props {}

const { items } = Astro.props;
---

<div class="items">
  {
    items.map((item) => (
      <div class="item">
        <item.icon width={28} height={28} fill="var(--text)" />

        <div class="content">
          <Typography tag="p" styling="bodyL">
            {item.title}
          </Typography>
          <Typography tag="p" styling="paragraphS">
            {item.description}
          </Typography>
        </div>
      </div>
    ))
  }
</div>

<style lang="scss">
  @use '~styles/mixins/media' as *;

  .items {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--s-24) var(--s-16);

    @include media-min('md') {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .item {
    display: flex;
    flex-direction: column;
    gap: var(--s-16);

    .content {
      display: flex;
      flex-direction: column;
      gap: var(--s-10);
    }
  }
</style>
