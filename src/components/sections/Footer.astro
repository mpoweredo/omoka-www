<style lang="scss">
  @use '~styles/mixins/media' as *;

  footer {
    width: calc(100% + var(--s-16) * 2);
    max-width: unset;
    margin-top: 100px;
    margin-left: calc(var(--s-16) * -1);
    padding: var(--s-64) var(--s-16) var(--s-32) var(--s-16);

    background: var(--gray-500);
    background-color: var(--gray-50);
  }

  .content {
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .sections {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: var(--s-24);
    row-gap: var(--s-64);

    :global(.bodyS) {
      font-size: 12px;
    }

    :global(.paragraphM) {
      font-size: 16px;
    }

    @include media-min('xs') {
      grid-template-columns: repeat(2, 1fr);
    }

    @include media-min('sm') {
      grid-template-columns: repeat(4, 1fr);
      font-size: inherit;
    }
  }

  .section {
    display: flex;
    flex-direction: column;
    gap: var(--s-32);
  }

  :global(.sectionTitle) {
    letter-spacing: 0.5px;
  }

  .itemTitle {
    text-decoration: none;
  }

  :global(.itemTitleText) {
    &:hover {
      color: var(--text);
    }
  }

  .items {
    display: flex;
    flex-direction: column;
    gap: var(--s-12);
  }

  .cta {
    display: flex;
    flex-direction: column;
    gap: var(--s-32);

    margin-top: var(--s-64);
    padding-top: var(--s-40);
    border-top: 1px solid var(--gray-300);
  }

  .copyright {
    display: flex;
    justify-content: space-between;
    margin-top: 7.2rem;
    padding-top: var(--s-16);

    .links {
      display: flex;
      gap: var(--s-12);
    }
  }
</style>
