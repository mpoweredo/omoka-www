      },
      {
        title: 'Sign up for free',
        link: `https://app.devtimate.com/sign-up`,
        target: '_blank',
      },
      {
        title: 'Get a demo',
        link: `https://meetings-eu1.hubspot.com/tommy-phan`,
        target: '_blank',
      },
      {
        title: 'Get estimation advice',
        link: `https://meetings-eu1.hubspot.com/tommy-phan`,
        target: '_blank',
      },
    ],
  },
  {
    title: 'PRODUCT',
    items: [
      {
        title: 'Why us',
        link: `/#${SECTIONS.WHY_US}`,
      },
      {
        title: 'Features',
        link: `/#${SECTIONS.FEATURES}`,
      },
      {
        title: 'Testimonials',
        link: `/#${SECTIONS.TESTIMONIALS}`,
      },
      {
        title: 'Problem',
        link: `/#${SECTIONS.PROBLEM}`,
      },
      {
        title: 'Pricing',
        link: `/#${SECTIONS.PRICING}`,
      },
      {
        title: 'FAQ',
        link: `/#${SECTIONS.FAQ}`,
      },
    ],
  },
  {
    title: 'RESOURCES',
    items: [
      {
        title: 'Academy',
        link: `${PAGES.ACADEMY}`,
      },
      {
        title: 'Blog',
        link: `${PAGES.BLOG}`,
      },
      {
        title: 'Glossary',
        link: `${PAGES.GLOSSARY}`,
      },
      {
        title: 'Release notes',
        link: `${PAGES.RELEASE_NOTES}`,
      },
      {
        title: 'YouTube',
        link: 'https://www.youtube.com/@devtimate/videos',
        target: '_blank',
      },
      {
        title: 'LinkedIn',
        link: 'https://www.linkedin.com/company/devtimate',
        target: '_blank',
      },
    ],
  },
  {
    title: 'HELP & LEGAL',
    items: [
      {
        title: 'Email: support@devtimate.com',
        link: `mailto:support@devtimate.com`,
      },
      {
        title: 'Get support now',
        link: `https://www.useinvent.com/e/ast_50Asa4OE6UB7qRwqa10tpZ`,
        target: '_blank',
      },
      {
        title: 'Privacy policy',
        link: `${PAGES.PRIVACY}`,
      },
      {
        title: 'Terms of service',
        link: `${PAGES.TOS}`,
      },
    ],
  },
];
---

<footer>
  <div class="content">
    <div class="sections">
      {
        sections.map((section) => (
          <div class="section">
            <Typography
              color="gray1400"
              class="sectionTitle"
              tag="p"
              styling="bodyS"
            >
              {section.title}
            </Typography>

            <div class="items">
              {section.items.map((item) => (
                <a class="itemTitle" href={item.link} target={item.target}>
                  <Typography
                    color="gray1400"
                    tag="p"
                    styling="paragraphM"
                    class="itemTitleText"
                  >
                    {item.title}
