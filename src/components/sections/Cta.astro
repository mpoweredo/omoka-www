---
import Button from '~components/ui/Button.astro';
import Typography from '~components/ui/Typography.astro';
import paperPlane from '~assets/doodles/paper-plane.svg';
import star from '~assets/doodles/star.svg';
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="container">
  <div class="backgroundImages">
    <Image class="paperPlane" src={paperPlane} alt="background image" />
    <Image class="star" src={star} alt="background image" />
  </div>

  <div class="texts">
    <Typography align="center" tag="h2" styling="headingL">
      <Fragment set:html={title.replace(/\n/g, '<br />')} />
    </Typography>

    <Typography color="gray900" align="center" tag="p" styling="paragraphL">
      <Fragment set:html={description.replace(/\n/g, '<br />')} />
    </Typography>
  </div>

  <Button href="https://app.devtimate.com/sign-up" variant="primary">
    Try it now!
  </Button>
</div>

<style lang="scss">
  @use '~styles/mixins/media' as *;

  .container {
    position: relative;
    z-index: 1;

    display: flex;
    flex-direction: column;
    gap: var(--s-32);
    align-items: center;
    justify-content: center;

    margin-top: calc(var(--section-gap) / 2);
    padding: 10rem var(--s-16);
    border-radius: 2.4rem;

    background-color: var(--gray-50);
  }

  .texts {
    display: flex;
    flex-direction: column;
    gap: var(--s-16);
    align-items: center;
    justify-content: center;
  }

  .backgroundImages {
    position: absolute;
    z-index: -1;

    display: none;

    width: 100%;
    height: 100%;

    @include media-min('sm') {
      display: block;
    }
  }

  .paperPlane {
    position: absolute;
    top: 5%;
    left: 80%;
  }

  .star {
    position: absolute;
    bottom: 15%;
    left: 5%;
  }
</style>
